{% extends 'index.html.twig' %}

{% block title %}Liste des Genres{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Genres</h1>
    <ul class="list-group">
        {% for genre in genres %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="{{ path('produit_genre', { id: genre.id }) }}">
                    {{ genre.nom }}
                </a>
                <span class="badge bg-secondary rounded-pill">{{ genre.produits|length }}</span>
            </li>
        {% else %}
            <li class="list-group-item">Aucun genre trouv√©.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
