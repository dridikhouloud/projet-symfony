    padding: 0;
    margin: 0;
}

.footer-widget ul li {
    font-size: 1rem;
    margin-bottom: 10px;
    color: #ddd;
    transition: color 0.3s ease;
}

.footer-widget ul li:hover {
    color: #E63946;
    cursor: pointer;
}

/* Layout de la grille des widgets */
.footer-widget .row {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}

.footer-widget .col-lg-3, 
.footer-widget .col-sm-6 {
    flex: 1 1 calc(25% - 20px); /* pour 4 colonnes */
    min-width: 200px;
}

@media (max-width: 768px) {
    .footer-widget .col-lg-3 {
        flex: 1 1 calc(50% - 20px); /* pour 2 colonnes sur petits écrans */
    }

    .footer-widget .col-sm-6 {
        flex: 1 1 100%;
    }

    .newslatter-form form {
        flex-direction: column;
    }

    .newslatter-form input[type="text"] {
        margin-bottom: 10px;
    }

    .newslatter-form button {
        width: 100%;
    }
}

/* ARTICLES LES PLUS VENDUS  */

/* Conteneur principal de la section */
.best-selling-items {
    display: flex;
    flex-direction: column; /* Titre au-dessus des cartes */
    align-items: center; /* Centrer les éléments */
    padding: 30px;
    background-color: #f9f9f9; /* Fond clair */
    box-sizing: border-box;
    width: 100vw; /* Largeur sur toute la largeur de la fenêtre */
    margin: 0; /* Supprimer les marges */
}

/* Titre de la section */
.best-selling-items h2 {
    font-size: 3rem;
    color: #444;
    text-align: center;
    margin-bottom: 30px; /* Espacement entre le titre et les cartes */
    font-family: 'Arial', sans-serif;
}

/* Conteneur des cartes de produits */
.products {
    display: flex;
    justify-content: center; /* Centrer les cartes horizontalement */
    gap: 30px; /* Espacement entre les cartes */
    width: 100%; /* Largeur totale du conteneur */
    overflow-x: auto; /* Ajouter un défilement horizontal si nécessaire */
    padding: 20px 0;
}

/* Style des cartes de produits */
.product {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 15px; /* Bordures arrondies pour un style moderne */
    padding: 20px;
    width: 300px; /* Largeur des cartes */
    box-sizing: border-box;
    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Ombre douce */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    flex-shrink: 0; /* Empêcher les cartes de rétrécir */
}

/* Effet de survol des cartes */
.product:hover {
    transform: scale(1.05); /* Légère mise en avant au survol */
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Ombre accentuée */
}

/* Image des produits */
.product img {
    max-width: 100%;
    height: auto;
    border-radius: 10px; /* Arrondir les coins des images */
    margin-bottom: 15px;
}

/* Nom du produit */
.product h3 {
    font-size: 1.4rem;
    margin: 10px 0;
    color: #333;
    font-weight: bold;
    font-family: 'Arial', sans-serif;
}

/* Prix du produit */
.product p {
    font-size: 1.2rem;
    color: #666;
    margin: 5px 0;
    font-family: 'Arial', sans-serif;
}

/* Ajouter un style au conteneur pour un défilement horizontal */
.products::-webkit-scrollbar {
    height: 10px;
}

.products::-webkit-scrollbar-thumb {
    background-color: #ccc;
    border-radius: 5px;
}

.products::-webkit-scrollbar-track {
    background-color: #f9f9f9;
}
/* css pour le button*/
.btn-primary {
    display: inline-block;
    padding: 10px 20px;
