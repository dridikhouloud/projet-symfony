    transform: translateY(-2px); /* Légère élévation au survol */
}

.btn-primary:active {
    background-color: #003f7f; /* Couleur en cliquant */
    transform: translateY(0); /* Réinitialisation de l'élévation */
}

.btn-primary:focus {
    outline: none;
