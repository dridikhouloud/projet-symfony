    color: #fff;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.newslatter-form button:hover {
    background-color: #D62828;
}

/* Style général pour les widgets de pied de page */
.footer-widget {
    background-color: #2a2a2a;
    color: #fff;
