        /* Général */
#billboard {
    position: relative;
    width: 100%;
    height: 500px; /* Ajustez la hauteur de la section */
    overflow: hidden;
}

/* Styles pour le Swiper */
.main-swiper {
    width: 100%;
    height: 100%;
}

.swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #000; /* Couleur de fond par défaut pour les images */
    background-size: 100% auto; /* Permet à l'image de s'étendre en largeur */
    background-position: center;
    background-repeat: no-repeat; /* Assure qu'il n'y a pas de répétition de l'image */
    height: 100%;
}

/* Éviter tout flou d'image */
.swiper-slide img {
    image-rendering: -webkit-optimize-contrast; /* Assure une image plus nette */
    image-rendering: crisp-edges;
    object-fit: cover; /* Si vous utilisez une balise <img> au lieu de background */
}

/* Contenu de la bannière */
.banner-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    text-align: center;
    max-width: 90%;
    padding: 20px;
}

.banner-title {
    font-size: 2.5rem; /* Taille de police pour le titre */
    font-weight: 700;
    margin-bottom: 15px;
}

.banner-description {
    font-size: 1.2rem;
    margin-bottom: 20px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.btn-wrap a {
    display: inline-block;
    background-color: #E63946; /* Couleur rouge */
    color: white;
    padding: 12px 30px;
    border-radius: 50px;
    font-size: 1.1rem;
    text-decoration: none;
    transition: background-color 0.3s ease;
}

.btn-wrap a:hover {
    background-color: #D62828; /* Couleur rouge foncé pour l'effet hover */
}

.icon {
    margin-left: 8px;
}

/* Responsive Design */
@media (max-width: 768px) {
    .banner-title {
        font-size: 2rem;
    }

    .banner-description {
        font-size: 1rem;
    }

    .btn-wrap a {
        padding: 10px 20px;
        font-size: 1rem;
    }
}

@media (max-width: 480px) {
    .banner-title {
        font-size: 1.8rem;
    }

    .banner-description {
        font-size: 0.9rem;
    }

    .btn-wrap a {
